<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="127dp"
    android:layout_height="205dp"
    app:cardBackgroundColor="@color/actionbar"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/vImageView"
            android:layout_width="104dp"
            android:layout_height="100dp"
            android:layout_marginLeft="2.5dp"
            android:layout_marginTop="5.6dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/vName"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:text="Name"
            android:textColor="@color/rate"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:text="Rs."
            android:textColor="@color/price"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-14dp"
            android:text="Price"
            android:textColor="@color/price"
            android:textSize="10sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/vDescription"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="3dp"
            android:text="Description"
            android:textSize="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vofferlabel"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3.3dp"
            android:textColor="@color/discount"
            android:textSize="10sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/vDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-14dp"
            android:textColor="@color/discount"
            android:textSize="10sp"
            android:textStyle="bold" />





    </LinearLayout>
</androidx.cardview.widget.CardView>