<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".frmFinish">

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="800dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="800dp"
            app:cardCornerRadius="10dp"
            android:background="@color/actionbar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Now Is The Time To Double Check Everyting"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/darkbtncolor"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipient"
                android:textColor="@color/rate"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="10dp"></TextView>

            <TextView
                android:id="@+id/fname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:textColor="@color/btncolor"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="180dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipient's Contact Number"
                android:textColor="@color/rate"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="110dp"
                android:layout_marginLeft="10dp"></TextView>

            <TextView
                android:id="@+id/fcontactnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:textColor="@color/btncolor"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="180dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="@color/rate"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="10dp"></TextView>

            <TextView
                android:id="@+id/faddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:textColor="@color/btncolor"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="180dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Date"
                android:textColor="@color/rate"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="10dp"></TextView>

            <TextView
                android:id="@+id/fddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:textColor="@color/btncolor"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="180dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Time"
                android:textColor="@color/rate"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="10dp"></TextView>

            <TextView
                android:id="@+id/ftime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="230dp"
                android:textColor="@color/btncolor"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="180dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price of the Items"
                android:textColor="@color/rate"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="10dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. "
                android:layout_marginTop="270dp"
                android:textColor="@color/btncolor"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="180dp"></TextView>

            <TextView
                android:id="@+id/fitemprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="205dp"
                android:layout_marginTop="270dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/btncolor"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price of the Delivery"
                android:textColor="@color/rate"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="310dp"
                android:layout_marginLeft="10dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. "
                android:layout_marginTop="310dp"
                android:textColor="@color/btncolor"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="180dp"></TextView>
            <TextView
                android:id="@+id/fdeliveryprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="310dp"
                android:textColor="@color/btncolor"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="205dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textColor="@color/rate"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="10dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. "
                android:layout_marginTop="350dp"
                android:textColor="@color/btncolor"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="180dp"></TextView>
            <TextView
                android:id="@+id/ftotalprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                android:textColor="@color/btncolor"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="205dp"></TextView>

            <Button
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="420dp"
                android:background="@color/darkbtncolor"
                android:textColor="@color/actionbar"
                android:textStyle="bold"
                android:text="Proceed To Payment"
                android:id="@+id/btnpayment"></Button>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</ScrollView>