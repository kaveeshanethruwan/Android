<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appThemeforground"
    tools:context=".frmAddNewUser">


    <androidx.cardview.widget.CardView
        android:layout_width="550dp"
        android:layout_height="600dp"
        app:cardBackgroundColor="@color/whatsapp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/txtemail"
            android:layout_width="480dp"
            android:layout_height="50dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/rec"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtpwd"
            android:layout_width="480dp"
            android:layout_height="50dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="175dp"
            android:background="@drawable/rec"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnAddUser"
            android:layout_width="245dp"
            android:layout_height="48dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="280dp"
            android:background="@color/actionbar"
            android:saveEnabled="false"
            android:text="Add new user"
            android:textAllCaps="false"
            android:textColor="@color/appThemeforground"
            android:textSize="20dp" />

        <ProgressBar
            android:id="@+id/mainprogresscycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:indeterminateTint="@color/actionbar"
            android:textColor="@color/silver" />


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>