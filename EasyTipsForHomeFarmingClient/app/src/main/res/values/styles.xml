<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dingo</item>
        <item name="colorPrimaryDark">@color/dingo</item>
        <item name="colorAccent">@color/dingo</item>
    </style>

    <!--menu style-->
    <style name="AppTheme.NoActionBarFront">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--    navigation style-->
    <style name="NavigationView">
        <item name="android:textColorSecondary">@color/dingo</item>
<!--        <item name="android:textSize">18dp</item>-->
    </style>



</resources>
